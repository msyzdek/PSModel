# Local development template. Do NOT commit your real .env.

# SQLite database path
DATABASE_URL="file:./prisma/dev.db"

# QuickBooks Online (Development keys + sandbox)
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_REDIRECT_URI=http://localhost:3000/api/qbo/callback
QBO_ENV=sandbox
# Optional; omit to use default
# QBO_MINOR_VERSION=75

# Lock to a single QBO company (realmId). Import is blocked if it doesn't match.
QBO_ALLOWED_REALMID=

# Auth (Google SSO)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Generate with: `openssl rand -base64 32` (do not commit real value)
AUTH_SECRET=
# For local/dev convenience (optional)
# In dev you can set either of these to avoid host header issues
# NEXTAUTH_URL should be your app URL (e.g., http://localhost:3000)
NEXTAUTH_URL=
# Or trust the host header in dev
AUTH_TRUST_HOST=true
# Optional policy
# Require company domain: e.g. example.com
AUTH_ALLOWED_DOMAIN=
# Comma-separated list of emails that are always allowed
AUTH_ALLOWED_EMAILS=

# Optional rollout flag (defaults to true)
# Set to false/0 to disable enforcement in staging
AUTH_ENABLED=true
